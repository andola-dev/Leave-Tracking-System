<div style="margin: 170px 0 0;">
	<table align="center">
	  <tr>
		<td>
		  <h4>Forgot your password?</h4>

		  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal well wl_strch" }) do |f| %>
			<%= devise_error_messages!%>

			<div><%= f.label :email %>
			<%= f.email_field :email, :required => true, :style=>"height:30px;width:330px" %></div>
			<br />
			<div><%= f.submit "Send me reset password instructions" , :class=>"btn btn-primary" %></div>
		  <% end %>

		  <%#= render "devise/shared/links" %>
		</td>
	  </tr>
	</table>
</div>