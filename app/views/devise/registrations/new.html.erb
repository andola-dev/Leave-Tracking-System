<table align="center">
  <tr>
    <td>
      <h4>Sign up</h4>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class => "form-horizontal well"}) do |f| %>
        <%= devise_error_messages! %>
        
        <div><%= f.label :email %>
        <%= f.email_field :email, :required => true %></div>

        <div><%= f.label :password %>
        <%= f.password_field :password, :required => true %></div>

        <div><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :required => true %></div>
        <label><%=gotcha%></label>
        <div><%= f.submit "Sign up", :class=>"btn btn-primary" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </td>
  </tr>
</table>      
