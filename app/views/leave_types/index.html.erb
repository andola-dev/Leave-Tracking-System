
<table class="table table-striped" id="leave_type_tbl">
  <thead>
   <tr>
    <th>Type</th>
    <th>Color</th>
    <th>Leave count</th>
    <th></th>   
   </tr>
  </thead>
<tbody>
<% @leave_types.each do |leave_type| %>
  <%#=leave_type.class%>


  <tr>
    <td><%= leave_type.option %></td>
    <td><div style="width:20px;height:20px;-webkit-border-radius: 10px;-moz-border-radius: 10px;border-radius: 10px;border:1px solid #E8FFF1;background-color:<%= leave_type.color %>;-webkit-box-shadow: #B3B3B3 3px 3px 3px;-moz-box-shadow: #B3B3B3 3px 3px 3px; box-shadow: #B3B3B3 3px 3px 3px;"></div></td>
    <td><%= leave_type.leave_count %></td>
    <td><%#= link_to 'Show', leave_type , :class => 'btn btn-mini' %>
    <%= link_to 'Edit', edit_leave_type_path(leave_type)  , :class => 'btn btn-mini' %>
    <%= link_to 'Destroy', leave_type, method: :delete, data: { confirm: 'Are you sure?' }  , :class => 'btn btn-mini btn-danger'%></td>
  </tr>
  
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Leave type', new_leave_type_path ,  :class => 'btn btn-primary' %>
