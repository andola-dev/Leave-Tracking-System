<%#- model_class = InventoryUser -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human %></h1>
</div>
<% #if products.count > 0%>
  <div class="label label-success">Inventory Information</div>
    <%#@inventory_users.each do |inv_user|%>  
      <dl class="dl-horizontal">
        <dt><strong><%#= model_class.human_attribute_name(:item_name) %>:</strong></dt>
        <dd><%#= inv_user.inventory.item_name %></dd>
        <dt><strong><%#= model_class.human_attribute_name(:qty) %>:</strong></dt>
        <dd><%#= inv_user.qty %></dd>
        <dt><strong><%#= model_class.human_attribute_name(:date) %>:</strong></dt>
        <dd><%#= inv_user.created_at.strftime("%d, %m-%Y") %></dd>
      </dl>
      <div style="border-bottom:1px solid lightgrey;height:2px;width:500px;"></div>
    <% #end %>
<% #end %>  
